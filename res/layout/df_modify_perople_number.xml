<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <RelativeLayout
        android:id="@+id/rl_content_header"
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:layout_alignParentTop="true"
        android:background="@anim/property_selection_top_bg">

        <TextView
            android:id="@+id/tv_properties_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="15dip"
            android:text="牛排熟度选择"
            android:textSize="@dimen/text_size_middle"
            android:gravity="center_vertical|left"
            android:padding="5dip"/>

        <ImageView
            android:id="@+id/img_close"
            android:layout_width="50dip"
            android:layout_height="50dip"
            android:padding="10dip"
            android:src="@drawable/close"
            android:layout_marginRight="10dip"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"/>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/modify_layout01"
        android:layout_below="@+id/rl_content_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:paddingLeft="50dp"
        android:paddingRight="50dp"
        android:layout_marginTop="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="桌号"
            android:textSize="@dimen/text_size_middle"
            />

        <TextView
            android:id="@+id/modify_desk_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#E2E2E2"
            android:text="A06"
            android:textSize="@dimen/text_size_middle"
            android:padding="10dp"
            android:layout_marginLeft="10dp"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/modify_layout02"
        android:layout_below="@+id/modify_layout01"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="50dp"
        android:paddingRight="50dp"
        android:layout_marginTop="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="人数"
            android:textSize="@dimen/text_size_middle"
            />

        <EditText
            android:id="@+id/modify_people_num_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_middle"
            android:padding="10dp"
            android:layout_marginLeft="10dp"
            android:background="@android:drawable/editbox_background_normal"
            android:inputType="number"/>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rl_content_footer"
        android:layout_width="match_parent"
        android:layout_height="60dip"
        android:layout_below="@+id/modify_layout02"
        android:layout_marginTop="40dp"
        android:background="@anim/property_selection_bottom_bg">

        <Button
            android:id="@+id/btn_ensure"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_centerInParent="true"
            android:layout_marginLeft="20dip"
            android:layout_marginTop="8dip"
            android:layout_marginRight="20dip"
            android:layout_marginBottom="8dip"
            android:text="确定"
            android:background="@anim/choose_end_btn_bg"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_middle"
            android:gravity="center"/>

    </RelativeLayout>

</RelativeLayout>