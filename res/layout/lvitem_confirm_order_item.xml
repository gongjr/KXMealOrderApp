<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/conf_order_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#f8f8f8"
    android:paddingTop="20dp"
    android:paddingBottom="20dp">

    <LinearLayout
        android:id="@+id/rl_dish_comp_nav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:paddingLeft="20dip"
        android:paddingBottom="8dip" >

        <TextView
            android:id="@+id/tv_dish_name"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:gravity="center_vertical|left"
            android:text="塔可特级牛排套餐"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_dish_count"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="1份" 
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_dish_price"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="￥28" 
            android:textSize="15sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_taste_consists"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_dish_comp_nav"
        android:layout_marginTop="5dip"
        android:layout_marginBottom="5dip"
        android:gravity="left|center_vertical"
        android:paddingLeft="20dip"
        android:text="口味:七分熟"
        android:textSize="15sp"
        android:textColor="#f65f17" />

    <LinearLayout
        android:id="@+id/ll_actions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="5dip"
        android:layout_below="@+id/tv_taste_consists"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:weightSum="5"
        android:paddingLeft="20dip" >

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_weight="3" >

            <ImageButton
                android:id="@+id/btn_delete"
                android:layout_width="35dip"
                android:layout_height="35dip"
                android:background="@drawable/bg_item_btn_click"
                android:src="@drawable/button_del" />

            <ImageButton
                android:id="@+id/btn_detail_item"
                android:layout_width="35dip"
                android:layout_height="35dip"
                android:layout_marginLeft="8dip"
                android:background="@drawable/bg_item_btn_click"
                android:src="@drawable/button_remarks" />

            <ImageButton
                android:id="@+id/btn_wait"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="@drawable/bg_item_btn_click"
                android:src="@drawable/button_wait"
                android:layout_marginLeft="8dip" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_weight="2" >

            <ImageButton
                android:id="@+id/btn_add"
                android:layout_width="35dip"
                android:layout_height="35dip"
                android:background="@drawable/bg_item_btn_click"
                android:src="@drawable/button_add" />

            <ImageButton
                android:id="@+id/btn_minus"
                android:layout_width="35dip"
                android:layout_height="35dip"
                android:layout_marginLeft="8dip"
                android:background="@drawable/bg_item_btn_click"
                android:src="@drawable/button_right"/>

            <ImageButton
                android:id="@+id/btn_edit_price"
                android:layout_width="35dip"
                android:layout_height="35dip"
                android:layout_marginLeft="15dip"
                android:background="@drawable/bg_item_btn_click"
                android:src="@drawable/button_change"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_properties"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_actions"
        android:background="#fbf5cd"
        android:gravity="center_vertical"
        android:orientation="vertical">
    </LinearLayout>

    <!--<TextView -->
        <!--android:id="@+id/tv_divider_line"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="1dip"-->
        <!--android:layout_alignParentBottom="true"-->
        <!--android:background="#F1F1F1" />-->
</RelativeLayout>