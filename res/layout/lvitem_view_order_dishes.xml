<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFF"
    android:paddingLeft="5dip"
    android:paddingTop="8dip"
    android:paddingRight="5dip"
    android:paddingBottom="8dip">

    <LinearLayout
        android:id="@+id/ll_top_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_seri_no"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="1."
            android:textSize="@dimen/text_size_small"
            android:textColor="#000000"/>

        <TextView
            android:id="@+id/tv_dish_name"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="6"
            android:gravity="center_vertical|left"
            android:text="美味全家福拼盘"
            android:textSize="@dimen/text_size_small"
            android:textColor="#000000"/>

        <TextView
            android:id="@+id/tv_dish_count"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="x1"
            android:textSize="@dimen/text_size_small"
            android:textColor="#000000"/>

        <TextView
            android:id="@+id/tv_dish_price"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center"
            android:text="￥32"
            android:textSize="@dimen/text_size_small"
            android:textColor="#000000"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_bottom_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_top_content"
        android:orientation="horizontal"
        android:weightSum="10" >

        <TextView
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="space"
            android:textSize="@dimen/text_size_small"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/tv_dish_properties"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_weight="9"
            android:paddingBottom="5dip"
            android:gravity="center_vertical|left"
            android:text=""
            android:textColor="@color/dark_red"
            android:textSize="@dimen/text_size_xxsmall" />
        
    </LinearLayout>

</RelativeLayout>