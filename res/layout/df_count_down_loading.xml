<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_global"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff">

        <TextView
            android:id="@+id/tv_content_txt"
            android:layout_marginLeft="5dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="20dip"
            android:layout_centerHorizontal="true"
            android:text="正在提交订单..." 
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/dark_red"
            android:textSize="18sp"
            android:visibility="visible"/>

    <com.asiainfo.mealorder.widget.TimeTextView
        android:id="@+id/TimeOut_num"
        android:layout_width="@dimen/Dip_40"
        android:layout_height="@dimen/Dip_40"
        android:layout_below="@+id/tv_content_txt"
        android:layout_marginTop="@dimen/Dip_20"
        android:layout_centerHorizontal="true"
        android:textColor="@color/black"
        android:background="@drawable/count_down_bg"
        android:textSize="@dimen/text_size_large"
        android:textStyle="bold"
        android:gravity="center"/>

    <Button
        android:id="@+id/read_cancle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/TimeOut_num"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="20dip"
        android:layout_marginRight="20dip"
        android:layout_marginTop="20dip"
        android:layout_marginBottom="20dip"
        android:background="@anim/login_btn_bg"
        android:gravity="center"
        android:text="取 消"
        android:textColor="@color/white" />

</RelativeLayout>